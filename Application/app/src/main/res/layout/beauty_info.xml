<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/beautyinfoimg"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_margin="10dp"
            android:background="@drawable/nonregistered" />

        <TextView
            android:id="@+id/beautyinfoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/beautyinfoimg"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="25dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/beautyinfotime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/beautyinfouse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#999999"></LinearLayout>

    <TextView
        android:id="@+id/beautyinfoaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/beautyinfotelno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:autoLink="phone"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25dp" />
</LinearLayout>